@model Consultoresvs3.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó la contraseña?";
}

<h2>@ViewBag.Title.</h2>

<form class="form-horizontal">
    <h4>Especifique su correo electrónico.</h4>
    <hr>
    <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
        <ul>
            <li style="display:none"></li>
        </ul>
    </div>    <div class="form-group">
        <label class="col-md-2 control-label" for="Email">Correo electrónico</label>
        <div class="col-md-10">
            <input class="form-control" id="correo" type="text" >
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-primary Ec" data-url="@Url.Content("/Servicios/Recuperarcontrasena/")">Buscar</a>
        </div>
    </div>
</form>
<div id="cargar">

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {

               //script para enviar el correo
                    $('.Ec').click(function () {
                        var correo = $('#correo').val();
                        $.ajax({
                            method: 'POST',
                            url: $(this).data('url'),
                            data: { correo: correo}
                        })
                            .done(function (data) {
                                $('#cargar').html(data);
                            }).fail(function () {
                                alert("error");
                            });
                    });
            });
</script>

}
