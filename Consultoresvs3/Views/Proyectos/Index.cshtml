@model IEnumerable<Consultoresvs3.Models.Proyecto>

@{
    ViewBag.Title = "Proyectos";
}

<h2 style="font-weight:bold;">Proyectos</h2>

<p>
    @Html.ActionLink("Agregar Proyecto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empresa.NombreEmpresa)
        </th>
        <th>
            Estado Proyecto
        </th>
        <th>
            Proyecto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TiempoEstipulado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Estado.Nombre == "Finalizado")
    {
        <tr class="bg-primary">
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.NombreEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiempoEstipulado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) |
            </td>
        </tr>
    }
    else
    {
        <tr>
    
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.NombreEmpresa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TiempoEstipulado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }) |
            @if (User.IsInRole("ADMIN"))
            {
                @Html.ActionLink("Finalizar", "EditarEstado", new { id = item.Id })
            } 
        </td>
    </tr>
    }
}
</table>