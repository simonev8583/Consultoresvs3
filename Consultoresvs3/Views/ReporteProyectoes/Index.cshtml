@model IEnumerable<Consultoresvs3.Models.ReporteProyecto>

@{
    ViewBag.Title = "Reporte Proyectos";
}

<br />
<center><h2 style="font-weight:bold;">REPORTE DE PROYECTOS</h2></center>

<br />

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                Empresa
            </th>
            <th>
                Proyecto
            </th>
            <th>
                Estado
            </th>
            <th>
                Precio
            </th>
            <th>
                Fecha Inicio
            </th>
            <th>
                Fecha Fin
            </th>
            <th>
                Horas Trabajadas
            </th>
            <th>
                Horas Estipuladas
            </th>
            <th>
                Utilidad
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Empresa.NombreEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Estado.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HorasInvertidas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proyecto.TiempoEstipulado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Utilidad)
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>

<br /><br />
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-6 col-sm-3">
            <div>
                <div class="bg-img-1">
                    <center><img src="~/Imagenes/Img4.jpg" class="img-bottom efect-shadow" /></center>
                </div>
            </div>
        </div>
        <div class="col-lg-offset-6 col-md-offset-6 col-sm-offset-6 col-lg-3 col-md-3 col-xs-6 col-sm-3">
            <div>
                <div class="bg-img-1">
                    <center><img src="~/Imagenes/Img3.jpg" class="img-bottom efect-shadow" /></center>
                </div>
            </div>
        </div>
    </div>
</div>

