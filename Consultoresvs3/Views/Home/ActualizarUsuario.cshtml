
@if (User.IsInRole("ADMIN"))
{
    <br />
    <div class="row">
        <div class="col-lg-12">
            <center><h1 style="font-weight:bold">ACTUALIZAR USUARIO</h1></center>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-lg-3">
            <input type="text" id="identidad" style="width:100%" placeholder="Identidad" />
        </div>
        <div class="col-lg-3">
            <input type="text" style="width:100%" id="salario" placeholder="Salario" />
        </div>
        <div class="col-lg-3">
            <input type="text" style="width:100%" id="valorhorasp" placeholder="Valor horas con prestaciones"  />
        </div>
        <div class="col-lg-3">
            <input type="text" style="width:100%" id="valorhorasnp" placeholder="Valor horas sin prestaciones"  />
        </div>
    </div>

    <br />
    <div class="form-group">
        <center><a class="btn btn-primary updateU" data-url="@Url.Content("/Home/ActualizarUsuario/")">Actualizar</a></center>
    </div>

    <center>
        <div id="ans" style="color:blue">

        </div>
    </center>

    @section scripts {
        <script>
            $(document).ready(function () {

                $('.updateU').click(function () {
                    var identidad = $('#identidad').val();
                    var salario = $('#salario').val();
                    var valorhorasp = $('#valorhorasp').val();
                    var valorhorasnp = $('#valorhorasnp').val();
                    $.ajax({
                        method: 'POST',
                        url: $(this).data('url'),
                        data: { identidad: identidad, salario: salario, valorhorasp: valorhorasp, valorhorasnp: valorhorasnp }
                    })
                        .done(function (data) {
                            $("#ans").html(data);
                        }).fail(function () {
                            alert("error");
                        });
                });
            });
        </script>
    }
}


